<aura:component description="customPopover" controller="KanbanBoardController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:attribute name="kanbanBoards" type="KanbanBoard__c[]" />
    <aura:attribute name="kanbanColumns" type="KanbanColumn__c[]" />

    <lightning:layout class="slds-box--border">
        <div>
            <lightning:select aura:id="selectBoard" name="selectBoard" label="Choose board" onchange="{! c.selectKanbanBoard }" required="true">
                <aura:iteration items="{! v.kanbanBoards }" var="board">
                    <option text="{! board.Name }" value="{! board.Id }" selected="" />
                </aura:iteration>
            </lightning:select>
        </div>
        <div>
            <lightning:select name="select" label="Choose column" required="true">
                <aura:iteration items="{!v.kanbanColumns}" var="column">
                    <option text="{! column.Name }" selected=""/>
                </aura:iteration>
            </lightning:select>
        </div>
        <div class="slds-button-group-row">
            <lightning:button disabled="{! v.newKanbanCard.Name == ''}" variant="success" onclick="{! c.createNewCard }" label="Move" />
            <lightning:button variant="destructive" label="Cancel" />
        </div>
    </lightning:layout>

</aura:component>
